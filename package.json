{
  "name": "node-ts-resolver",
  "version": "1.0.0",
  "description": "Node resolver hook allowing `.ts` files to be found when imported with `.js` extensions",
  "type": "module",
  "scripts": {
    "test": "cd tests; npm ci && npm run test",
    "prepublishOnly": "npm test"
  },
  "keywords": [
    "node",
    "typescript",
    "ts",
    "experimental-strip-types",
    "experimental-transform-types",
    "resolve"
  ],
  "author": "Bazyli Brzoska <npm@invent.life>",
  "license": "MIT",
  "files": [
    "*.js"
  ],
  "engines": {
    "node": ">=22.6.0"
  },
  "exports": {
    ".": "./register-strip.js",
    "./strip": "./register-strip.js",
    "./transform": "./register-transform.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/niieani/node-resolve-ts.git"
  },
  "dependencies": {
    "amaro": "^1.1.0"
  }
}
